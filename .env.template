# BMO Documentation Analysis Tool - Environment Variables
# Copy this file to .env and fill in your actual API keys

# ===========================================
# AI/ML API Keys
# ===========================================

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI API (alternative)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini API (alternative)
# GOOGLE_API_KEY=your_google_api_key_here

# ===========================================
# Vector Database (for production RAG)
# ===========================================

# Pinecone
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=your_pinecone_environment
# PINECONE_INDEX_NAME=bmo-documents

# Chroma DB (alternative)
# CHROMA_DB_PATH=./chroma_db

# ===========================================
# Application Configuration
# ===========================================

# Environment
ENVIRONMENT=development
DEBUG=true

# Server Configuration
API_HOST=localhost
API_PORT=8000
FRONTEND_HOST=localhost
FRONTEND_PORT=8501

# Session Management
SESSION_TIMEOUT_MINUTES=60
MAX_SESSIONS=1000

# File Upload Limits
MAX_FILE_SIZE_MB=10
UPLOAD_DIRECTORY=./uploads

# ===========================================
# Security & Authentication
# ===========================================

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here

# Session Secret (generate with: openssl rand -hex 32)
SESSION_SECRET_KEY=your_session_secret_key_here

# Password Salt (generate with: openssl rand -hex 16)
PASSWORD_SALT=your_password_salt_here

# ===========================================
# Database (for production)
# ===========================================

# PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/bmo_docs
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bmo_docs
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# Redis (for caching)
# REDIS_URL=redis://localhost:6379/0
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# ===========================================
# Cloud Storage (for production)
# ===========================================

# AWS S3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=bmo-document-storage

# Azure Blob Storage
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string
# AZURE_CONTAINER_NAME=bmo-documents

# ===========================================
# Monitoring & Logging
# ===========================================

# Logging Level
LOG_LEVEL=INFO

# Sentry (error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# Application Insights
# APPINSIGHTS_INSTRUMENTATION_KEY=your_app_insights_key

# ===========================================
# External Integrations
# ===========================================

# Microsoft Graph (for SharePoint integration)
# MICROSOFT_CLIENT_ID=your_client_id
# MICROSOFT_CLIENT_SECRET=your_client_secret
# MICROSOFT_TENANT_ID=your_tenant_id

# Slack (for notifications)
# SLACK_BOT_TOKEN=your_slack_bot_token
# SLACK_CHANNEL=#bmo-docs-alerts

# ===========================================
# Feature Flags
# ===========================================

# Enable/disable features
ENABLE_DOCUMENT_ANALYSIS=true
ENABLE_QNA=true
ENABLE_FILE_UPLOAD=true
ENABLE_SESSION_CLEANUP=true
ENABLE_MOCK_MODE=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10